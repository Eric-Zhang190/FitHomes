/* pages/User/user.wxss */
page {
  background-color: #edece8;
}

.user_info_wrap{
  height: 40vh;
  overflow: hidden;
  position: relative;
}

.user_img_wrap{

}


.user_bg{
  height: 40vh;
  filter: blur(10rpx);
}

.user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}

.user_icon{
width: 150rpx;
height: 150rpx;
border-radius: 50%;
}

.user_name{
color: #ffffff;
margin-top: 40rpx;
font-size: 40rpx;
}

.user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.user_content{
position: relative;

}

.user_main{
position: absolute;
width: 90%;
left: 50%;
transform: translateX(-50%);
top: -30rpx;
}

.history_wrap{
  background-color: #ffffff;
  display: flex;
}

.history_wrap navigator {
flex: 1;
text-align: center;
padding: 10rpx 0;
}

.his_num {
  color: greenyellow;
}

.his_name{

}

.orders_wrap{
background-color: #fff;
margin-top: 30rpx;
}

.orders_title{
padding: 20rpx;
border-bottom: 1rpx solid #ccc;
}

.orders_content {
display: flex;

}

.orders_content navigator {
flex: 1;
text-align: center;
padding: 15rpx;
}

.order_icon {
}

.order_name {

}