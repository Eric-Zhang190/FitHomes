/* pages/detail/detail.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 100vw;
  background: linear-gradient(to bottom left, rgba(127, 255, 212, 0.7), 10%, rgba(255, 182, 193, 0.2), white);
}

.form-section-title {
  font-size: 20px;
  padding-top: 20px;
  padding-bottom: 20px;
  font-weight: bold;
  /* margin-bottom:100px; */
}

.form-section {
  border: 1px solid white;
  /* box-shadow: 0px 5px 20px 6px rgb(0 0 0 / 25%); */
  background-color: white;
  border-radius: 10px;
  width: 90vw;
}

.page-section {
  padding-left: 10px;
  font-size: 16px;
}

.page-section-title {
  padding-bottom: 10px;
  font-size: 16px;
  font-weight: bold;
}

.title-address {
  font-weight: 400;
}

.picker {
  padding-bottom: 10rpx;
  margin-right: 10px;
  border: 1px solid black;

}

.house-address {
  color: gray;
}

.radio-group-2 {
  padding-bottom: 10px;
  display: flex;
  flex-direction: column;
}

.radio-choice {
  padding: 0px 2px 0px 10px;
}

.housenote {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
}

.tagline{
  width:100%;
  height: 2rpx;
  background: black; 
  }

.switch-space {
  padding-bottom: 10px;
  /* width: 50%; */
}

.wx-switch-input {
  transform: scale(0.8) !important;
}

.container {
  padding: 5rpx;
  width: 100vw;
}

.line {
  width: 90%;
  height: 1rpx;
  background: #eee;
  position: absolute;
  top: 25rpx;
  left: 5%;
  z-index: -1;
}

button {
  width: 280rpx;
  height: 60rpx;
}

.content {
  margin-top: 20rpx;
  font-size: 32rpx;
  text-indent: 32rpx;
}

.textarea-input1 {
  border: 1px solid black;
  padding: 10rpx 10rpx;
  width: 600rpx;
  height: 50rpx;
}

.textarea-input2 {
  /* border:1px solid rgba(255, 235,205, 0.6); */
  padding: 10rpx 10rpx;
