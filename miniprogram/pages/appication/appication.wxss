}

.textarea-container {
  padding: 10rpx 0rpx;
}

.weui-input {
  padding-bottom: 0px;
  background-color: #e3e3dc;
  border-bottom: 2px solid black;
}

.radio-input {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.checkbox-group {
  padding-bottom: 10px;
}

.btn-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  margin-bottom: 20px;
}

.button-approve-font {
  font-size: 15px;
  vertical-align: middle;
}

.button-cancel-font {
  margin-top: 5px;
  font-size: 14px;
  font-weight: normal;
  background-color: #D3D3D3;
}

.showtv_show {
  display: block;
  padding-left: 20px;
}

.showtv_hide {
  display: none;
}

.radio-image {
  width: 150rpx;
  height: 150rpx;
}

.cates {
  height: 520rpx;
}

