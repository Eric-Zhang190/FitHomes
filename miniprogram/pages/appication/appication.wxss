  height: 100%;
  display: flex;
  flex-direction: column;
}

.left_menu {
  /* flex: 2; */
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.menu_item {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  font-weight: 600;
}

.menu_item-active {
  color: red;
}

.right_menu {
  flex: 5;
}

