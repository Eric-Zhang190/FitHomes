.detail-container {
  height: 100vh;
  background: linear-gradient(to bottom left, rgba(127, 255, 212, 0.7), 10%, rgba(255, 182, 193, 0.2), white);
}

swiper {
  width: 100%;
  height: 400rpx;

}

swiper image {
  width: 100%;
  height: 100%;
}

.house-display {
  display: flex;
  justify-content: center;
}

.house-title {
  margin: 10px 20px 0px 20px;
  font-weight: 700;
  font-size: 20px;
}

.detail-house-box__info {
  margin: 10px 20px;
  padding: 10px 10px;
  border: 1px solid white;
  box-shadow: 0px 5px 20px 6px rgb(0 0 0 / 25%);
  border-radius: 10px;
  width: 90vw;
  background-color: white;
}

.detail-house-box__details{
  display: flex;
  justify-content: flex-start;

  flex-wrap: wrap;
  margin: 10px 20px;
  padding: 10px 10px;
  border: 1px solid white;
  box-shadow: 0px 5px 20px 6px rgb(0 0 0 / 25%);
  border-radius: 10px;
  width: 90vw;
  background-color: white;
} 

.detail-house-box__details > div {
  width: 33%;
}

.detail-icon {
  text-align:center;
}

.btn {
  margin-top: 10px;
}

.detail_map {
  display: flex;
  justify-content: center;
  align-items: center;
}