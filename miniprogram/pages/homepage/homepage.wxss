/*控制轮播图*/
.swiper-block {
  height: 400rpx;
  width: 100%;
  margin-top: 150rpx;
  margin-bottom: 50rpx;
  }

  .swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow: unset;
  /* background: linear-gradient(to bottom left, rgba(255, 255, 0, 0.7), 50%, rgba(0, 0, 0, 0.2)); */
  }

  .slide-image {
  height: 292rpx;
  width: 520rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 30rpx rgba(255, 255, 255, 1);
  margin: 0rpx 30rpx;
  z-index: 1;
  /* background-color: rgba(255, 153, 0, 1); */
  /* background: linear-gradient(to bottom left, rgba(255, 153, 0, 1), 50%, rgba(255, 255, 255, 1)); */
  background-color: white;
  }

  .active {
  transform: scale(1.14);
  transition: all 0.2s ease-in 0s;
  z-index: 20;
  }

  .header-box {
    height: 150px;
    padding-top: 5px;
    padding-bottom: 20px;
    background-color: #fff;
    margin-bottom: 80rpx;
  }
  
  .header-row {
    height: 50%;
    margin-top: 8px;
  }
  
  .header-cell {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    min-width: 450rpx;
    height: 100rpx;
    /* display: inline-block; */
    text-align: center;
    border: black solid 1px;
    background-color: #e6e4dc;
  }
  
  .header-cell image {
    width: 70rpx;
    height: 70rpx;
    /* background-color: #0f7bb9; */
  }
  
  .text-color {
    color: #181818;
    margin-bottom: 20rpx;
  }